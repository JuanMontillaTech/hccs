namespace SGA.Controllers
{

    public class {{name}}Controller : Controller
    {

        private readonly SGAContext _db;
        private readonly IGetCurrentUser _getCurrentUser;
        public {{name}}Controller(SGAContext Db, IGetCurrentUser _user)
        {
            _db = Db;
            _getCurrentUser = _user;

        }


        public IActionResult Index()
        {

            return View();
        }
        [Route("/{{name}}")]
        [HttpGet]
        public IActionResult Get()
        {
            int IdEntity = _getCurrentUser.UserEntidadID();

            var data = _db.{{name}}s.Include(b => b.{{name}}Details).Where(x => x.IsActive == true && x.EntidadId == IdEntity).ToList();

            return Ok(data);
        }




        [Route("/{{name}}/{id}")]
        [HttpGet]
        public IActionResult Get(Guid id)
        {
            var model = _db.{{name}}s.Find(id);
            return Ok(model);
        }


        [Route("/{{name}}")]
        [HttpPost]
        public IActionResult Post({{name}} model)
        {
            int IdEntity = _getCurrentUser.UserEntidadID();
            var codeNEw = _db.Numerations.Where(x => x.Group == 90 && x.EntidadId == IdEntity).ToList().FirstOrDefault();
            if (codeNEw != null)
            {

                codeNEw.Sequence++;
                string _Code = $"{codeNEw.Prefix}{codeNEw.Sequence}";
                model.Code = _Code;
            }
            _db.{{name}}s.Add(model);

            _db.SaveChanges();



            return Ok(model);
        }

        [Route("/{{name}}")]
        [HttpPut]
        public IActionResult Put({{name}} model)
        {
            var {{name}}Found = _db.{{name}}s.Find(model.Id);
            {{name}}Found.Date = model.Date;
            {{name}}Found.Reference = model.Reference;
            {{name}}Found.Commentary = model.Commentary;
            foreach ({{name}}Details rows in model.{{name}}Details)
            {
                var {{name}}DetailsFound = _db.{{name}}Details.Find(rows.Id);
                {{name}}DetailsFound.Commentary = rows.Commentary;
                {{name}}DetailsFound.Debit = rows.Debit;
                {{name}}DetailsFound.Credit = rows.Credit;
                {{name}}DetailsFound.Contact = rows.Contact;
            }
            _db.SaveChanges();

            return Ok(model);
        }

        [Route("/{{name}}")]
        [HttpDelete]
        public IActionResult Delete({{name}} model)
        {
            var {{name}} = _db.{{name}}s.Find(model.Id);
            {{name}}.IsActive = false;
            _db.SaveChanges();

            return Ok(model);
        }
    }

}
