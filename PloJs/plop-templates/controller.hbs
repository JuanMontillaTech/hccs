    public class {{name}}Controller : Controller
    {

        private readonly SGAContext _db;
        private readonly IGetCurrentUser _getCurrentUser;
        public {{name}}Controller(SGAContext Db , IGetCurrentUser _user)
        {
            _db = Db;
            _getCurrentUser = _user;
        }

     
        public IActionResult Index()
        {
            
            return View(); 
        }
        [Route("/{{name}}")]
        [HttpGet]
        public IActionResult Get()
        {
            int IdEntity = _getCurrentUser.UserEntidadID();
            var model = _db.{{name}}s.Where(x=> x.IsActive == true && x.EntidadId == IdEntity).ToList();
            return Ok(model);
        }


           [Route("/{{name}}/List")]
        [HttpGet]
        public IActionResult List()
        {
            var result = _db.{{name}}s.Where(x => x.IsActive == true).ToList();
            List<GenericListDto> DataList = new List<GenericListDto>();
            foreach (var row in result)
            {
                DataList.Add(new GenericListDto()
                {
                    Id = row.Id.ToString(),
                    Name = $"{row.Name}"

                });
            }
            return new JsonResult(Result<List<GenericListDto>>.Success(DataList, ""));
        }

        [Route("/{{name}}/{id}")]
        [HttpGet]
        public IActionResult Get(Guid id)
        {
            var model = _db.{{name}}s.Find(id);
            return Ok(model);
        }

        [Route("/{{name}}")]
        [HttpPost]
        public IActionResult Post({{name}} model)
        {
            int IdEntity = _getCurrentUser.UserEntidadID();
          
                _db.{{name}}s.Add(model);
                _db.SaveChanges();
       

            return Ok(model);
        }

        [Route("/{{name}}")]
        [HttpPut]
        public IActionResult Put({{name}} model)
        {
            var {{name}} = _db.{{name}}s.Find(model.Id);
            {{name}}.Name = model.Name; 

            _db.SaveChanges();

            return Ok(model);
        }

        [Route("/{{name}}")]
        [HttpDelete]
        public IActionResult Delete({{name}} model)
        {
            var {{name}} = _db.{{name}}s.Find(model.Id);
            {{name}}.IsActive = false; 
            _db.SaveChanges();

            return Ok(model);
        }
    }

